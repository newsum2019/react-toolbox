@import "../constants.styl"

[data-component-autocomplete]
  position                                      : relative
  // -- Children
  > [data-role="values"]
    > *
      display                                   : inline-block
      margin-right                              : (SPACE / 2)
      padding                                   : (SPACE / 2)
      font-size                                 : FONT_SIZE_SMALL
      color                                     : WHITE
      background-color                          : THEME
      cursor                                    : pointer
  > [data-role="sugestions"]
    z-index                                     : 1
    position                                    : absolute
    width                                       : 100%
    overflow-x                                  : hidden
    overflow-y                                  : scroll
    max-height                                  : (2 * UNIT)
    margin-top                                  : -(SPACE)
    background-color                            : WHITE
    cursor                                      : pointer
    visibility                                  : hidden
    > *
      padding                                   : (SPACE / 2)
      &:hover
        background-color                        : THEME

  // -- Styles
  &.focus
    > [data-role="sugestions"]
      visibility                                : visible
